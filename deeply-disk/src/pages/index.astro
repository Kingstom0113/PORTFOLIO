---
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: 'Sistema de Gestión Empresarial',
    categories: ['Backend', 'API REST', 'Node.js', 'React'],
    image: '/images/project1.jpg',
    href: '/projects/erp-system',
  },
  {
    title: 'Plataforma E-learning',
    categories: ['Full Stack', 'Next.js', 'MongoDB', 'AWS'],
    image: '/images/project2.jpg',
    href: '/projects/elearning-platform',
  },
  {
    title: 'API de Microservicios',
    categories: ['Backend', 'Microservicios', 'Docker', 'Kubernetes'],
    image: '/images/project3.jpg',
    href: '/projects/microservices',
  },
];
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manuel Soto Romero - Desarrollador Full Stack</title>
    <meta name="description" content="Portfolio de Manuel Soto Romero - desarrollador web full stack" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-black font-['Inter'] antialiased">
    <Header />
    <main>
      <Hero />
      
      <!-- Projects Section -->
      <section class="py-20 px-4">
        <div class="max-w-7xl mx-auto">
          <h2 class="text-4xl font-light text-white mb-12">Proyectos Seleccionados</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {projects.map((project) => (
              <ProjectCard {...project} />
            ))}
          </div>
        </div>
      </section>

      <!-- Awards Section -->
      <section class="py-20 px-4">
        <div class="max-w-7xl mx-auto">
          <h2 class="text-2xl font-light text-white mb-12">Reconocimientos</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="p-6 border border-gray-800 hover:border-gray-700 transition-colors">
              <span class="text-sm text-gray-500">2024</span>
              <h3 class="text-lg font-light text-white mt-2">Mejor Portfolio del Año</h3>
              <p class="text-gray-400 mt-1">Awwwards</p>
            </div>
            <div class="p-6 border border-gray-800 hover:border-gray-700 transition-colors">
              <span class="text-sm text-gray-500">2023</span>
              <h3 class="text-lg font-light text-white mt-2">Diseñador Destacado</h3>
              <p class="text-gray-400 mt-1">Dribbble</p>
            </div>
            <div class="p-6 border border-gray-800 hover:border-gray-700 transition-colors">
              <span class="text-sm text-gray-500">2023</span>
              <h3 class="text-lg font-light text-white mt-2">Site of the Day</h3>
              <p class="text-gray-400 mt-1">CSS Design Awards</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section class="py-20 px-4 border-t border-gray-800">
        <div class="max-w-7xl mx-auto text-center">
          <h2 class="text-3xl font-light text-white mb-4">¿Tienes un proyecto en mente?</h2>
          <p class="text-gray-400 mb-8">Trabajemos juntos para crear algo extraordinario</p>
          <a 
            href="/contact" 
            class="inline-flex items-center text-lg text-white hover:text-gray-300 transition-colors"
          >
            Contáctame
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </section>
    </main>

    <footer class="py-8 px-4 border-t border-gray-800">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <p class="text-gray-400">&copy; 2026 Manuel Soto Romero</p>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">Twitter</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">LinkedIn</a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">GitHub</a>
        </div>
      </div>
    </footer>
  </body>
</html>
