---
interface Props {
  title: string;
  categories: string[];
  image: string;
  href: string;
}

const { title, categories, image, href } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<article class="group relative overflow-hidden border border-gray-800 hover:border-gray-700 transition-colors">
  <a href={`${baseUrl}${href}`} class="block">
    <div class="aspect-[16/9] overflow-hidden">
      <img 
        src={`${baseUrl}${image}`}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
    </div>
    <div class="p-6">
      <h3 class="text-2xl font-light text-white mb-2">{title}</h3>
      <div class="flex flex-wrap gap-2">
        {categories.map((category) => (
          <span class="text-sm text-gray-400">{category}</span>
        ))}
      </div>
    </div>
  </a>
</article>
