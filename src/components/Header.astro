---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<header class="fixed w-full top-0 z-50 mix-blend-difference">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-20">
      <div class="flex-shrink-0">
        <a href={baseUrl || '/'} class="text-lg font-medium text-white hover:opacity-80 transition-opacity">
          Manuel Soto Romero
        </a>
      </div>
      <div class="hidden md:block">
        <div class="flex items-center space-x-8">
          <a 
            href={`${baseUrl}/works`} 
            class={`text-sm text-white hover:opacity-80 transition-opacity ${currentPath === '/works' ? 'opacity-80' : ''}`}
          >
            works
          </a>
          <a 
            href={`${baseUrl}/about`} 
            class={`text-sm text-white hover:opacity-80 transition-opacity ${currentPath === '/about' ? 'opacity-80' : ''}`}
          >
            about
          </a>
          <a 
            href={`${baseUrl}/pricing`} 
            class={`text-sm text-white hover:opacity-80 transition-opacity ${currentPath === '/pricing' ? 'opacity-80' : ''}`}
          >
            pricing
          </a>
          <a 
            href={`${baseUrl}/contact`} 
            class={`text-sm text-white hover:opacity-80 transition-opacity ${currentPath === '/contact' ? 'opacity-80' : ''}`}
          >
            Contact
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
